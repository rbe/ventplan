      <fileset dir="${module.wac.basedir}/scripts">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.wac.tests" depends="register.custom.compilers,compile.module.wac.production" description="compile module wac; test classes" unless="skip.tests">
    <mkdir dir="${wac.testoutput.dir}"/>
    <groovyc destdir="${wac.testoutput.dir}" fork="yes">
      <src refid="wac.module.test.sourcepath"/>
      <classpath refid="wac.module.classpath"/>
