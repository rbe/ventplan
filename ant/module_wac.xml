  <target name="compile.module.wac" depends="compile.module.wac.production,compile.module.wac.tests" description="Compile module wac"/>
  
  <target name="compile.module.wac.production" depends="register.custom.compilers,compile.module.wac-griffonplugins" description="Compile module wac; production classes">
    <mkdir dir="${wac.output.dir}"/>
    <groovyc destdir="${wac.output.dir}" fork="yes">
      <src refid="wac.module.sourcepath"/>
      <classpath refid="wac.module.production.classpath"/>
      <patternset refid="excluded.from.compilation.wac"/>
      <javac debug="${compiler.debug}">
        <compilerarg line="${compiler.args.wac}"/>
      </javac>
    </groovyc>
    <instrumentIdeaExtensions destdir="${wac.output.dir}">
      <compilerarg line="${compiler.args.wac}"/>
      <bootclasspath refid="wac.module.bootclasspath"/>
      <classpath refid="wac.module.production.classpath"/>
      <src refid="wac.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.wac"/>
    </instrumentIdeaExtensions>
    
    <copy todir="${wac.output.dir}">
      <fileset dir="${module.wac.basedir}/griffon-app/controllers">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.wac.basedir}/griffon-app/models">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.wac.basedir}/griffon-app/views">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.wac.basedir}/griffon-app/actions">
